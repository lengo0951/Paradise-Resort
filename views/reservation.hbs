<!-- External js -->
<script src="/js/reservation.js"></script>

<div class='res-body'>
  <h1 class='res-header'>Reservation</h1>
</div>

{{#each reservations}}
  <!-- Reservation {{this.res_id}} -->
  <div class='upcoming-inf-line'>
    <img class='res-img' src='{{this.imgSrc}}' alt='single-room' width='150' height='100'/>
    <div>
      <h3 class='name-room'><u>{{this.roomName}}</u></h3>
      <p id='firstline'><b>Booking time: &nbsp</b> {{this.booking_time_display}}</p>
      <p id='firstline'><b>Check In: &nbsp</b> {{this.start}}</p>
      <p id='firstline'><b>Duration: &nbsp</b> {{this.days}} days</p>
      <p id='secondline'>{{this.total_cost}} VNƒê</p>
    </div>

    {{#ifEquals status 0}}
      <div class='btn-res'>
        <p style='text-align:center; margin-top: 1%;'><u><i>Active till</i></u></p>
        <p style="text-align:center;"><i><u>{{this.end}}</u></i></p>
      </div>
    {{else ifEquals status 1}}
      <div class='btn-res'>
        <button type='button' class='btn-res-pending' onclick="payment('{{this.res_id}}', {{this.total_cost}})">Pending</button>
      </div>
    {{else ifEquals status 2}}
      <div class='btn-res'>
        <p style='margin-top: 2%;'><u><i>Ended</i></u></p>
      </div>
    {{else ifEquals status 3}}
      <div class='btn-res'>
        <p class='btn-res-completed'>Paid</p>
      </div>
    {{/ifEquals}}
    <br/>

  </div>
{{/each}}

<hr/>

<div class='body-end' style='margin-top: 3%;'>
  <b><p class='body-end-header'>Testimonials</p></b>
  <p class='body-end-text-1'>"Calm, Serene, Retro - What a way to relax and enjoy"</p>
  <p class='body-end-text-2'>Mr. and Mrs.Baxter, UK</p>
</div>