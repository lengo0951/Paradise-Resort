<!-- LOGIN FORM -->
<html>
  <body>
    <a href="/"><img class= "logo" src='/img/header-footer/Group2.svg' alt="login" /></a>
    <div class='login-form' id="login-form">
      <form action='' method='post' class='form' id='form-1'>
        <h2 class='heading'>LOGIN</h2>

        {{#if error}}
            <div class='error'>{{error}}, please try again.</div>
        {{else}}
            <div class='spacer'></div>
        {{/if}}

        {{!-- username --}}
        <div class='form-group'>
            <label for='username' class='form-label'>Username</label>
            <input id='username' name='username' type='text' placeholder='Enter your username' class='form-control' />
            <span class='form-message'></span>
        </div>
        {{!-- password --}}
        <div class='form-group'>
          <label for='password' class='form-label'>Password</label>
          <input id='password' name='password' type='password' placeholder='Enter your password' class='form-control' />
          <span class='form-message'></span>
        </div>
        {{!-- button for submit --}}
        <div class='form-group'>
          <button class='form-submit'>Log in</button>
        </div>
        <a href="signup">Don't have an account?</a>
      </form>
    </div>
    <script src='/js/form-validation.js'></script>
    <script>
      Validator({ 
        form: '#form-1', 
        rules: [ 
          Validator.isRequired('#username'),
          Validator.isRequired('#password'), 
          Validator.isEmail('#email')
        ] 
      });
  </body>
</html>